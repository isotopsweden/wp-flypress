{
  "name": "isotopsweden/wp-flypress",
  "type": "wordpress-muplugin",
  "license": "MIT",
  "description": "Use Flysystem with WordPress",
  "homepage": "https://github.com/isotopsweden/wp-flypress",
  "authors": [
    {
      "name": "Fredrik Forsmo",
      "email": "fredrik.forsmo@isotop.se",
      "homepage": "https://github.com/frozzare"
    }
  ],
  "keywords": [
    "wordpress",
    "plugin",
    "flysystem",
    "aws",
    "s3",
    "adapter"
  ],
  "autoload": {
    "classmap": [
      "src/"
    ],
    "files": [
      "src/helpers.php"
    ]
  },
  "require": {
    "php": "^7.0",
    "composer/installers": "~1.0",
    "aws/aws-sdk-php": "^3.21",
    "league/flysystem": "^1.0",
    "league/flysystem-aws-s3-v3": "^1.0",
    "twistor/flysystem-stream-wrapper": "^1.0",
    "ramsey/uuid": "^3.5"
  },
  "require-dev": {
    "frozzare/wp-test-suite": "~1.0",
    "wp-coding-standards/wpcs": "dev-develop"
  },
  "scripts": {
    "post-install-cmd": "if [ -f vendor/bin/phpcs ]; then \"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs; fi",
    "post-update-cmd" : "if [ -f vendor/bin/phpcs ]; then \"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs; fi"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
